/* pages/bleinfo/bleinfo.wxss */

.bleInfoView {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}

.device_list {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.device_item {
  height: auto;
  border-width: thick 0 thin;
  border-style: solid;
  border-color: rgb(235, 79, 31);
}

.device_item_hover {
  background-color: rgb(96, 233, 108);
}

.flex-wrp {
  display: flex;
  height: auto;
  justify-content: space-between;
}

.flex-wrp-device {
  display: flex;
  height: auto;
}

.ble_name {
  font-size: 22px;
  color: rgb(241, 14, 7);
  margin-left: 2%;
}

.ble_deviceId {
  font-size: 12px;
  color: rgb(8, 43, 238);
  margin-left: 2%;
}

.ble_ServiceNumbers {
  font-size: 12px;
  color: rgb(11, 216, 79);
  margin-left: 2%;
}

.ble_ServiceUUIDs {
  display: flex;
  font-size: 12px;
  color: rgb(49, 199, 199);
  margin-left: 2%;
}

.ble_ServiceUUID {
  white-space: nowrap;
  font-size: 10px;
  color: rgb(48, 145, 190);
  margin-left: 4%;
}

.flex-wrp-RRSI {
  align-items: center; /**子view垂直居中*/
  vertical-align: baseline; /**垂直居中*/
  display: flex;
  height: auto;
  color: rgb(53, 12, 236);
  text-align: center;
  justify-content: flex-end;
}

.ble_RRSI {
  font-size: 24px;
}

.ble_RRSI_unit {
  font-size: 10px;
  align-items: flex-end;
  vertical-align: text-bottom; /**垂直居中*/
}

.ble_RRSI_per {
  font-size: 22px;
}
